{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "globals": {
    "context": true,
    "describe": true,
    "it": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "comma-dangle": [2, "never"],
    "no-underscore-dangle": [0],
    "consistent-return": [0],
    "import/no-unresolved": [2, { "commonjs": true }],
    "max-len": [1, { "code": 250 }],
    "linebreak-style": [0],
    "strict": [0, "global"],
    "no-restricted-syntax": [0],
    "global-require": [0],
    "no-nested-ternary": [0],
    "no-confusing-arrow": [0],
    "arrow-body-style": "off",
    "arrow-parens": "off",
    "no-plusplus": "off",
    "brace-style": [0],
    "nonblock-statement-body-position": [0],
    "curly": [0],
    "no-use-before-define": [0],
    "object-curly-newline": [0]
  }
}
